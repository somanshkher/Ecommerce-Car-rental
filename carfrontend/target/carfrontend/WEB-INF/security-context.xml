 <authentication-manager>
 <authentication-provider>
  <jdbc-user-service data-source-ref="dataSource" users-by-username-query="select username,userpassword,active from user where username=?" 
  authorities-by-username-query="select username,authority from AUTHORITY  where username =?" /> 
  </authentication-provider>
  </authentication-manager>
  </beans:bean>
  